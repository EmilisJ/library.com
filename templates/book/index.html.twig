{% extends 'base.html.twig' %}

{% block title %}List of Books{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>
                    Title
                     <form>
                        <button method="GET" name="val" value="ta" href="{{ path('book_index') }}">ASC</button>
                        <button method="GET" name="val" value="td" href="{{ path('book_index') }}">DESC</button>
                    </form>
                </th>
                <th>Pages</th>
                <th>Year</th>
                <th>Author</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.pages }}</td>
                <td>{{ book.year }}</td>
                <td> 
                    {% for author in book.authors %}
                        {{author}}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
{% endblock %}
